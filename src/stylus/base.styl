@charset "utf-8"

/**
 * base style
 */
* 
	margin 0
	padding 0

html 
	font-size 65%

body
	font-size 1.4rem

img
	vertical-align bottom

h1
	font-size 2.4rem

h2
	font-size 1.8em

a
	text-decoration none

.container
	padding 10px

section
	>h1
		padding 10px 10px
		font-size 1.8rem
		color #fff
		background #000

article
	padding 14px
	margin-bottom 20px
	background #f4f4f4
	h1
		margin-bottom 10px
		font-size 1.4rem

.text
	margin-top 10px
	line-height 1.4
	&:first-child
		margin 0

.pickup
	background #f00
	width 3rem
	padding 0.1rem 0.5rem
	margin-bottom 5px
	color #fff
	text-align center
	font-weight bold
	font-size 1.0rem
